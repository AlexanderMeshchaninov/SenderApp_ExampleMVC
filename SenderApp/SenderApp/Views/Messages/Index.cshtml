@model IEnumerable<Core.AppIdentity.Models.CustomIdentityUser>
@{
    ViewData["Title"] = "Message Page";
}

<h1>Messages</h1>
<hr />
<table class="table">
    <thead>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Email)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UserName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.EmailConfirmed)
        </th>
    </tr>
    </thead>
    <tbody>
    @foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Email)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.UserName)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EmailConfirmed)
            </td>
            <td>
                <form method="post" asp-controller="Messages" asp-action="UserSendMessageNow" asp-route-id="@item.Id">
                    <input type="submit" value="write message now" class="btn btn-primary"/>
                </form>
            </td>
            <td>
                <form method="post" asp-controller="Messages" asp-action="UserSendMessageByTime" asp-route-id="@item.Id">
                    <input type="submit" value="write message by time" class="btn btn-primary"/>
                </form>
            </td>
        </tr>
    }
    </tbody>
</table>