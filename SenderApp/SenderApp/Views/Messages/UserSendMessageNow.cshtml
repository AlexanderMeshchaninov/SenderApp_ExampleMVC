@model SenderApp.Models.ViewModels.SendMessagesUser.UserMessageViewModel
@{
    ViewData["Title"] = "Write message now";
}
<h1>Send message to - @Model.Email</h1>
<hr />
<form asp-action="SendMessageNow" asp-controller="Messages">
    <div asp-validation-summary="All" class="text-danger"></div>
 
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />
    
    <div class="form-group">
        <label asp-for="Template" class="control-label">Choose template</label>
        <select asp-for="Template" data-val="true" class="form-control">
            <option value="UserMessageHappyNewYearTemplate">Happy New Year</option>
            <option value="UserMessageHappyBirthdayTemplate">Happy Birthday</option>
            <option value="UserCustomMessageTemplate">Custom message</option>
        </select>
    </div>
    
    <hr />
    
    <div class="form-group">
        <label asp-for="Message" class="control-label"><b>Send message now</b></label>
        <textarea type="text" asp-for="Message" class="form-control"></textarea>
    </div>
    
    <div class="form-group">
        <form method="post" asp-controller="Messages" asp-action="SendMessageNow">
            <input type="submit" value="Send" class="btn btn-primary"/>
        </form>
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>