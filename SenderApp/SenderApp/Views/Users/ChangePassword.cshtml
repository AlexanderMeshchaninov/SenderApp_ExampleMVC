@model SenderApp.Models.ViewModels.ChangeUserPassword.ChangePasswordViewModel
@{
    ViewData["Title"] = "Change password";
}
<h1>Change password for - @Model.Email</h1>
<hr />
<form asp-action="ChangePassword" asp-controller="Users">
    <div asp-validation-summary="All" class="text-danger"></div>
 
    <input type="hidden" asp-for="Id" />
    <input type="hidden" asp-for="Email" />
     
    <div class="form-group">
        <label asp-for="OldPassword" class="control-label">Current password</label>
        <input type="text" asp-for="OldPassword" class="form-control" />
    </div>
    <div class="form-group">
        <label asp-for="NewPassword" class="control-label">New password</label>
        <input type="text" asp-for="NewPassword" class="form-control"/>
    </div>
    <div class="form-group">
        <input type="submit" value="Save" class="btn btn-outline-dark" />
    </div>
</form>

<div>
    <a asp-action="Index">Back to List</a>
</div>